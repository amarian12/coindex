      .col-md-8.name.high  style = "text-transform: uppercase;" #{t('global.high_price')}
      .col-md-10.value.last style = "font-weight: bold; text-align: right;"
      .col-md-4.value style = "text-transform: uppercase; margin-left: 3px;" = @bid_code
  .row
      .col-md-8.name.low  style = "text-transform: uppercase;" #{t('global.low_price')}
      .col-md-10.value.last style = "font-weight: bold; text-align: right;"
      .col-md-4.value style = "text-transform: uppercase; margin-left: 3px;" = @bid_code
  .row
      .col-md-8.name.volume  style = "text-transform: uppercase;" #{t('global.volume')}
      .col-md-10.value.last style = "font-weight: bold; text-align: right;"
