.panel.panel-default
  .panel-heading = t('.trades')
  .panel-body.trades style = "height: 301px; overflow: hidden;"
    table.table.table-condensed.table-striped
      thead: tr
          th.time
            = t('.time')
          th.price
            = t('.buy_sell')
          th.price
            = t('.price') 
            |  (
            = @bid_code
            | )
          th.amount
            = t('.volume') 
            |  (
            = @ask_code
            | )
      tbody.table-condensed.table-striped


