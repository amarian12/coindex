- unless @one_<%= name.underscore.pluralize %>.empty?
  .panel.panel-primary
    .panel-heading: span = t('.one')
    = render partial: 'table', locals: {<%= name.underscore.pluralize %>: @one_<%= name.underscore.pluralize %>}
- unless @all_<%= name.underscore.pluralize %>.empty?
  .panel.panel-success
    .panel-heading: span = t('.all')
    = render partial: 'table', locals: {<%= name.underscore.pluralize %>: @all_<%= name.underscore.pluralize %>}

- if @all_<%= name.underscore.pluralize %>.empty? and @one_<%= name.underscore.pluralize %>.empty?
  h3.text-info.text-center = t('.empty')
